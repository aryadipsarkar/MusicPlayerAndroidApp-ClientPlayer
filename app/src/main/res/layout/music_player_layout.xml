<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MediaPlayerApp"
    android:orientation="vertical">

    <EditText
        android:layout_width="100dp"
        android:digits="12345"
        android:maxLength="1"
        android:gravity="center"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:id="@+id/Info"
        android:gravity="center"
        android:text="In the space provided above, write any number from 1 to 5. The numbers denote the song index. Then hit Play!"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:textStyle="italic"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="355dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.37"
        android:weightSum="1">
        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:id="@+id/clip1"
            android:text="Clip 1"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:padding="8dp"/>

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:id="@+id/clip2"
            android:text="Clip 2"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:padding="8dp"/>

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:id="@+id/clip3"
            android:text="Clip 3"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:padding="8dp"/>

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:id="@+id/clip4"
            android:text="Clip 4"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:padding="8dp"/>
        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:id="@+id/clip5"
            android:text="Clip 5"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:padding="8dp"/>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/play"
            android:text="Play"
            android:onClick="onPlayFunction"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/pause"
            android:text="Pause"
            android:onClick="onPauseFunction"/>

        <TextView
            android:layout_width="30dp"
            android:gravity="center"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:text="â™ª	"
            android:textSize="45dp"
          />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/resume"
            android:text="Resume"
            android:gravity="center"
            android:onClick="onResumeFunction"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/stop"
            android:text="Stop"
            android:onClick="onStopFunction"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.31">

        <Button
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:id="@+id/records"
            android:text="Records"
            android:layout_gravity="center_vertical"
            android:onClick="onRecordsFunction"/>

    </LinearLayout>


</LinearLayout>
